<body>
  <div class="main-content">
    <div class="right-side">
      <div class="right-top">
        <button type="button" class="btn btn-success" style="margin: 0 0.5rem;" onclick="refresh()">Refresh Page</button>
        <button type="button" class="btn btn-info" style="margin: 0 0.5rem;" onclick="showOrders()">Orders</button>
        <button type="button" class="btn btn-primary" style="margin: 0 0.5rem;" onclick="createnewCake()">Add Cake</button>
        <button type="button" class="btn btn-primary" style="margin: 0 0.5rem;" onclick="updateCake()">Update/View Cakes</button>
        <button type="button" class="btn btn-primary" style="margin: 0 0.5rem;" onclick="showEarnings()">View Earnings</button>
        <button type="button" class="btn btn-danger" style="margin: 0 0.5rem;">Logout</button>
      </div>
      <div class="right-bottom">

        <div id="orders">

          <table style="width:100%" class="table">
            <tr class="table-info">
              <th>Customer Name</th>
