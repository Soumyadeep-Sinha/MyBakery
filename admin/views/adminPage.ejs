            </tr>
          </table>
        </div>

        <div id="createCake">
          <h1>Add a new Cake to the inventory.</h1>
          <form action="/admin/CreateCakes" method="POST" enctype="multipart/form-data">

            <div class="form-left">
              <label for="cakeName">Cake Name:</label>
              <input type="text" id="cakeName" name="cakeName" required placeholder="Enter the cake name">
  
              <label for="cakeDescription">Cake Description:</label>
              <textarea id="cakeDescription" name="cakeDescription" required placeholder="Enter the cake description"> </textarea>
  
              <label for="cakeSugarAmount">Cake Sugar Amount (g) :</label>
              <input type="number" id="cakeSugarAmount" name="cakeSugarAmount" required placeholder="Enter the sugar amount">
  
              <label for="cakeType">Cake Type:</label>
              <input type="text" id="cakeType" name="cakeType" required placeholder="Enter the cake type">
  
              <label for="price">Price:</label>
              <input type="number" id="price" name="price" required placeholder="Enter the cake price">
            </div>

            <div class="form-right">
              <label for="discount">Discount:</label>
              <input type="number" id="discount" name="discount" required placeholder="Enter the discount">

              <label for="cakeDescription">Something Special:</label>
              <textarea id="cakeDescription" name="cakeSpeciality" required placeholder="Enter anyting special about the cake."> </textarea>
  
              <label for="thumbnailImage">Thumbnail Image:</label>
              <input class="btn btn-danger" type="file" id="thumbnailImage" name="thumbnailImage" required>
  
              <label for="imagePaths">Carousel Images:</label>
              <input class="btn btn-danger" type="file" id="imagePaths" name="imagePaths" multiple required>
  
              <button type="submit" class="btn btn-primary">Create Cake</button>
            </div>

          </form>
        </div>

        <!--Update cake-->

        <div id="updateCake">
          <table class="table">
