<script>
  const searchOrdersInput = document.getElementById("searchOrdersInput");
  const ordersRows = document.querySelectorAll("table tbody tr");

  searchOrdersInput.addEventListener("input", function() {
    const searchValue = this.value.toLowerCase();

    ordersRows.forEach(function(row) {
      const customerName = row.cells[0].textContent.toLowerCase();
      const orderID = row.cells[3].textContent.toLowerCase();
      const contactNumber = row.cells[5].textContent.toLowerCase();

      if (
        customerName.includes(searchValue) ||
        orderID.includes(searchValue) ||
        contactNumber.includes(searchValue)
      ) {
        row.style.display = "table-row";
      } else {
        row.style.display = "none";
      }
    });
  });

  const searchCakesInput = document.getElementById("searchCakesInput");
  const cakesRows = document.querySelectorAll(".tableArea table tbody tr");

  searchCakesInput.addEventListener("input", function() {
    const searchValue = this.value.toLowerCase();

    cakesRows.forEach(function(row) {
      const cakeID = row.cells[0].textContent.toLowerCase();
      const cakeName = row.cells[1].textContent.toLowerCase();

      if (cakeID.includes(searchValue) || cakeName.includes(searchValue)) {
        row.style.display = "table-row";
      } else {
        row.style.display = "none";
      }
    });
  });
</script>

