  <main>
    <section class="carousel-area">
      <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% for (let i = 0; i < cake.ImagePaths.length; i++) { %>
          <div class="carousel-item active">
            <img src="<%= cake.ImagePaths[i].replace("../client", "..") %>" class="d-block w-100" alt="...">
          </div>
          <% } %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </section>

    <section class="main-section">
      <div class="main-card">
        <div class="container-main">

          <div class="left-content">
            <div class="card-content">
              <h3><%= cake.CakeName %></h3>
              <p><%= cake.CakeDescription %></p>

              <h4>Type</h4>
              <ul>
                <li><%=cake.CakeType%></li>
                <li><%=cake.CakeSpeciality%></li>
                <li>Sugar amount (avg) : <%=cake.CakeSugarAmount%>g</li>
              </ul>
            </div>
          </div>
          <div class="line"></div>
          <div class="right-content">
            <div class="prices">
              <h1>Rs <%=cake.Price - cake.Discount%></h1>
              <h3><s>Rs <%=cake.Price%></s></h3>
              <h5>Discount : <%= Math.floor((cake.Discount) / cake.Price * 100)  %>%</h5>
            </div>


            <div class="offers">
              <ul class="list-group">
                <li class="list-group-item list-group-item-primary">Offers available for you ‚ù§Ô∏è</li>
                <li class="list-group-item list-group-item-success">üí≥ Extra 10Rs onspot cashback on HDFC card.</li>
                <li class="list-group-item list-group-item-success">üíµ Monsoon bakes extra 10Rs discount (price inclusive)</li>
                <li class="list-group-item list-group-item-success">üé´ Buy 3 items get 10% off coupon for next purchase.</li>
              </ul>
            </div>


            <div class="sub-btns">
              <form action="/addtocart/<%= cake.CakeName %>/<%=cake.Price - cake.Discount%>" class="CakeSelectForm" method="post">
                <div class="sizes">
                  <input type="text" style="display: none;" name="thumbnailUrl" value="<%= cake.CakeThumbNailImage.replace("../client", "..") %>">
                  <label for="selectSize">Select Size</label>
                  <select name="selectSize" id="selectSize">
                    <option value="0">default +Rs 0</option>
                    <option value="99">medium +Rs 99</option>
                    <option value="129">large +Rs 129</option>
                  </select>
                </div>
                
                <button type="submit" class="btn btn-danger btn-lg">Add to Basket</button>
              </form>
              <button type="button" class="btn btn-outline-danger btn-lg">Go Back</button>
            </div>

          </div>
        </div>
      </div>
    </section>


  </main>
